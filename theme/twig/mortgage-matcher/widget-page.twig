{% extends 'pages/page.twig' %}

{% block content %}
    {% block content_title %}
        <h1>{{ page.getMainHeading() }}</h1>
    {% endblock %}
    {% block page_content %}
        {{ page.getPageContent()|expandHtml }}
    {% endblock %}

    <section class="columns">
        <section class="column image">
            {% block page_image %}
                {{ page.image.tag('', page.imageDescription)|raw }}
            {% endblock %}
        </section>

        <section class="column form-widget">
            {% include 'mortgage-matcher/sections/widget-form.twig' %}
        </section>
    </section>
{% endblock %}